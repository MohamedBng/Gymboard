<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-semibold"><%= t("admin.exercises.index.title") %></h1>
</div>

<%= render 'admin/exercises/search_form', q: @q %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @exercises.each do |exercise| %>
    <div class="card bg-base-100 border border-base-content/5">
      <div class="card-body p-4">
        <div class="flex justify-between items-start">
          <h2 class="card-title text-lg"><%= exercise.title %></h2>
          <% if exercise.muscle_group.present? %>
            <div class="badge badge-accent">
              <%= exercise.muscle_group.humanize %>
            </div>
          <% end %>
        </div>

        <div class="flex flex-wrap gap-2 justify-end mt-4">
          <% exercise.exercise_muscles.includes(:muscle).each do |exercise_muscle| %>
            <% if exercise_muscle.role == 'primary' %>
              <div class="badge badge-outline badge-primary">
                <%= exercise_muscle.muscle.name %>
              </div>
            <% else %>
              <div class="badge badge-outline badge-secondary">
                <%= exercise_muscle.muscle.name %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render(PaginationComponent.new(collection: @exercises)) %>
