<div class="card bg-base shadow-lg rounded-2xl p-4 md:p-6 mb-6 outline outline-1 outline-gray-300 dark:outline-gray-700">
  <div class="mb-6">
    <h2 class="text-lg sm:text-xl font-bold mb-2">
      <%= t("training_sessions.steps.slot.title") %>
    </h2>
    <p class="text-sm opacity-70">
      <%= t("training_sessions.steps.slot.subtitle") %>
    </p>
  </div>
  
  <%= form_with(model: training_session, url: training_session_form_path(training_session), method: :patch, class: "space-y-6") do |f| %>
      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold"><%= t("activerecord.attributes.training_session.start_time") %></span>
        </label>
        <%= f.datetime_local_field :start_time,
            class: "input input-bordered w-full",
            required: true,
            autofocus: true %>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text font-semibold"><%= t("activerecord.attributes.training_session.end_time") %></span>
        </label>
        <%= f.datetime_local_field :end_time,
            class: "input input-bordered w-full",
            required: true,
            autofocus: true %>
      </div>

      <!-- Boutons de navigation -->
      <div class="flex gap-4">
        <%= link_to go_back_to_previous_step_training_session_forms_path,
              data: { turbo_method: :post },
              class: "btn btn-outline btn-lg gap-2 flex-1" do %>
          <i class="fa-solid fa-arrow-left"></i>
          <%= t("common.back") %>
        <% end %>

        <%= f.button type: "submit", class: "btn btn-accent btn-lg gap-2 flex-1" do %>
            <%= t("common.continue") %>
            <i class="fa-solid fa-arrow-right"></i>
        <% end %>
      </div>
    </div>
  <% end %>
